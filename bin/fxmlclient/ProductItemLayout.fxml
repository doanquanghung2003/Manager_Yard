<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="rootCard" alignment="CENTER" prefHeight="220.0" prefWidth="340.0" spacing="10" style="-fx-background-color: rgba(255,253,235,0.5); -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProductItemController">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   <children>
      <ImageView fx:id="img_thumbnailProduct" fitHeight="44.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../OneDrive/Hình%20ảnh/Ảnh/LogoDH2.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER_LEFT" prefHeight="109.0" prefWidth="318.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="txt_nameProduct" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Text fx:id="txt_priceProduct" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Text fx:id="txt_descriptionProduct" strokeType="OUTSIDE" strokeWidth="0.0" />
            <HBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btn_detailProduct" mnemonicParsing="false" text="Chi tiết" />
                  <Button fx:id="btn_bookYard" mnemonicParsing="false" text="Đặt sân" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
