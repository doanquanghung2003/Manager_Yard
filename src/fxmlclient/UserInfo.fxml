<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="900" stylesheets="@../application/application.css" xmlns="http://javafx.com/javafx/8.0.202" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserInfoController">
    <top>
        <BorderPane prefHeight="100" style="-fx-background-color: #63C8FF;" styleClass="header-bar">
            <left>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-image">
                    <image>
                        <Image url="@../../../../OneDrive/Hình%20ảnh/Ảnh/LogoDH2.png" />
                    </image>
                </ImageView>
            </left>
            <center>
                <Label text="Quản lý thông tin cá nhân" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
            </center>
        </BorderPane>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="32.0">
            <children>
                <Region prefWidth="200"/>
                <VBox alignment="CENTER" spacing="15" maxWidth="400" styleClass="content-box">
                    <children>
                        <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" styleClass="avatar-image">
                            <image>
                                <Image url="@../../../../OneDrive/Hình%20ảnh/Ảnh/LogoDH2.png" />
                            </image>
                        </ImageView>
                        <TextField promptText="Họ và tên" fx:id="nameField" styleClass="text-field"/>
                        <Label fx:id="nameError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <TextField promptText="Số điện thoại" fx:id="phoneField" styleClass="text-field"/>
                        <Label fx:id="phoneError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <TextField promptText="Gmail" fx:id="emailField" styleClass="text-field"/>
                        <Label fx:id="emailError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <TextField promptText="Tên tài khoản" fx:id="usernameField" styleClass="text-field" editable="false"/>
                        <Label fx:id="usernameError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <TextField promptText="Thẻ" fx:id="cardField" styleClass="text-field"/>
                        <Label fx:id="cardError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <PasswordField promptText="Mật khẩu mới (nếu đổi)" fx:id="passwordField" styleClass="password-field"/>
                        <Label fx:id="passwordError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <PasswordField promptText="Xác nhận mật khẩu mới" fx:id="confirmPasswordField" styleClass="password-field"/>
                        <Label fx:id="confirmPasswordError" text="" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
                        
                        <Button text="Lưu thay đổi" fx:id="saveButton" styleClass="login-btn"/>
                    </children>
                </VBox>
                <Region prefWidth="200"/>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="32.0" style="-fx-background-color: #63C8FF;" styleClass="footer-bar">
            <children>
                <VBox alignment="CENTER_LEFT" spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="footer-logo">
                            <image>
                                <Image url="@../../../../OneDrive/Hình%20ảnh/Ảnh/LogoDH2.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="footer-label" text="Địa chỉ" />
                        <Label styleClass="footer-label" text="Số điện thoại" />
                        <Label styleClass="footer-label" text="Gmail" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>