<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"   fx:controller="controller.DashboardController">
   <children>
      <HBox spacing="0">
         <children>
            <!-- Sidebar -->
            <VBox style="-fx-background-color: #2c3e50;" prefWidth="250" spacing="0">
               <children>
                  <!-- Header -->
                  <HBox style="-fx-background-color: #34495e;" alignment="CENTER" spacing="10">
                     <padding>
                        <Insets>
                           <top>20</top>
                           <right>20</right>
                           <bottom>20</bottom>
                           <left>20</left>
                        </Insets>
                     </padding>
                     <children>
                        <Label text="🏟️" style="-fx-font-size: 24px;" />
                        <Label text="Manager Yard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
                     </children>
                  </HBox>
                  
                  <!-- Menu Items -->
                  <VBox spacing="5">
                     <padding>
                        <Insets>
                           <top>20</top>
                           <right>20</right>
                           <bottom>20</bottom>
                           <left>20</left>
                        </Insets>
                     </padding>
                     <children>
                        <Button fx:id="btnMenuYards" text="🏟️ Quản lý Sân" styleClass="menu-button" />
                        <Button fx:id="btnMenuBookings" text="📋 Quản lý Đặt sân" styleClass="menu-button" />
                        <Button fx:id="btnMenuStats" text="📊 Thống kê" styleClass="menu-button" />
                     </children>
                  </VBox>
                  
                  <!-- Spacer -->
                  <Region VBox.vgrow="ALWAYS" />
                  
                  <!-- Refresh Button -->
                  <VBox>
                     <padding>
                        <Insets>
                           <top>20</top>
                           <right>20</right>
                           <bottom>20</bottom>
                           <left>20</left>
                        </Insets>
                     </padding>
                     <children>
                        <Button fx:id="btnRefresh" text="🔄 Làm mới" styleClass="refresh-button" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Main Content -->
            <VBox spacing="0" HBox.hgrow="ALWAYS">
               <children>
                  <!-- Top Bar -->
                  <HBox style="-fx-background-color: #ecf0f1;" alignment="CENTER_RIGHT">
                     <padding>
                        <Insets>
                           <top>15</top>
                           <right>15</right>
                           <bottom>15</bottom>
                           <left>15</left>
                        </Insets>
                     </padding>
                     <children>
                        <Label text="Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <DatePicker fx:id="dpBookingDate" promptText="Chọn ngày" />
                        <Label fx:id="lblTotalBookingAmount" text="Tổng: 0₫" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                     </children>
                  </HBox>
                  
                  <!-- Content Area -->
                  <StackPane fx:id="contentPane" style="-fx-background-color: white;" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   
  
</StackPane> 